html, body {
  font-size: 16px;
}

body {
  background: #ebacb3;
  /* fallback for old browsers */
  background: -webkit-linear-gradient(to right, #4152A5, #ebacb3);
  /* Chrome 10-25, Safari 5.1-6 */
  background: linear-gradient(to right, #4152A5, #ebacb3);
  /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
  background-repeat: no-repeat;
  height: auto;
}

form {
  margin: 0 auto;
  width: 340px;
}

input[type=text] {
  margin-bottom: 1.25rem;
  padding: 0.5rem 1rem;
  font-size: 1rem;
  width: 100%;
  border-radius: 5px;
  border: none;
  box-shadow: 0px 1px 4px #000000ad;
}

input[type=text]::placeholder {
  color: rgba(211, 211, 211, 0.651);
  font-size: 14.5px;
}

input[type=submit] {
  font-family: "Montserrat";
  font-size: 19px;
  border: none;
  border-radius: 5px;
  background-color: black;
  color: white;
  padding: 0.5rem 1.25rem;
}

.field {
  display: flex;
}

.field-checkboxes {
  margin-top: 0.5rem;
}

.field-checkbox {
  display: flex;
  margin-bottom: 1.2rem;
  color: #270e11;
  font-size: 15px;
}
.field-checkbox p {
  margin: 0;
  font-family: "Montserrat";
  margin-left: 0.2rem;
}

.field-submit {
  text-align: right;
  justify-content: center;
}

.form-wrapper {
  background-color: #afafdb9a;
  width: 375px;
  margin: 4rem auto;
  padding: 1.5rem;
  color: #aa3a85ad;
  border-radius: 18px;
  box-shadow: 0px 1px 3px #efcaf7ad;
}

.form-title {
  font-family: "Montserrat", sans-serif;
  font-size: 26px;
  text-align: center;
  background-color: #faf9f9c0;
  padding: 0.75rem 1.75rem;
  margin: -1.5rem;
  margin-bottom: 1.5rem;
  border-top-left-radius: 14px;
  border-top-right-radius: 14px;
}

label {
  display: flex;
  font-family: "roboto";
  margin-bottom: 1.2rem;
  color: black;
  font-size: 18px;
}

.text-title {
  display: flex;
  margin-bottom: 1rem;
  font-family: "Roboto";
  color: #330099;
  font-size: 20px;
}